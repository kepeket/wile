<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Main.BottomSheet.TrainingInfo" parent="Theme.Main">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/workout_info</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Main.BottomSheet.TrainingSubInfo" parent="Theme.Main">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Main.Training.PlaceholderImage" parent="Theme.Main">
        <item name="android:src">@drawable/draw_sport_man_white</item>
    </style>


    <style name="Theme.Main.BottomSheet.Chronometer" parent="Theme.Main">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Theme.Main.BottomSheet.Countdown" parent="Theme.Main">
        <item name="android:textSize">120sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Main.Paragraph" parent="Theme.Main">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">@dimen/paragraph_margin</item>
    </style>

    <style name="Theme.Main.Training.Label" parent="Theme.Main">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/training_label</item>
    </style>

    <style name="Theme.Main.Social.RoomID" parent="Theme.Main">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/room_id</item>
        <item name="background">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Main.Training.MoreLessBtn" parent="Theme.Main">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="backgroundTint">?android:attr/colorPrimary</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Theme.Main.Workout.Duration" parent="Theme.Main">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Main.Training.Name" parent="Theme.Main">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Main.Training.Duration" parent="Theme.Main">
        <item name="android:textSize">12sp</item>
        <item name="background">@drawable/circle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Main.Training.Reps" parent="Theme.Main">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Main.Toolbar.Title" parent="Theme.Main">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <dimen name="workout_info">24sp</dimen>
    <dimen name="training_label">18sp</dimen>
    <dimen name="paragraph_margin">34dp</dimen>
    <dimen name="room_id">28sp</dimen>
</resources>
