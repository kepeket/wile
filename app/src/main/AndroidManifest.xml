<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wile.main">
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:name=".WileApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Main">
        <activity
            android:name=".ui.main.TrainingListingActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Main.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.add.AddActivity"
            android:label="@string/activity_add_label"

            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Main.NoActionBar"/>
        <activity android:name=".ui.add.QuickAddActivity"
        android:label="@string/activity_quick_add_label"

        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.Main.NoActionBar"/>
    </application>

</manifest>