<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wile.app">
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="com.wile.app.WileApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Main"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name="com.wile.app.ui.main.TrainingListingActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Main.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.wile.app.ui.add.AddActivity"
            android:label="@string/activity_add_label"

            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Main.NoActionBar"/>

        <activity android:name="com.wile.app.ui.add.QuickAddActivity"
            android:label="@string/activity_quick_add_label"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Main.NoActionBar"/>

        <activity android:name="com.wile.app.ui.add.TabataAddActivity"
            android:label="@string/activity_tabata_add_label"

            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Main.NoActionBar"/>
        <activity android:name="com.wile.app.ui.social.JoinActivity"
            android:label="@string/activity_social_join_label"

            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:parentActivityName="com.wile.app.ui.main.TrainingListingActivity"
            android:theme="@style/Theme.Main.NoActionBar"/>
        <activity android:name="com.wile.app.ui.workout.WorkoutActivity"
            android:label="@string/activity_workout_label"

            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Main.NoActionBar"/>
        <activity android:name="com.wile.app.ui.settings.SettingsActivity"
            android:label="@string/activity_settings_label"

            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Main.NoActionBar"/>
        <service
            android:enabled="true"
            android:name="com.wile.app.ui.workout.WorkoutService">
            <intent-filter>
                <action android:name="com.wile.app.ui.workout.WorkoutService" />
            </intent-filter>
        </service>
    </application>

</manifest>