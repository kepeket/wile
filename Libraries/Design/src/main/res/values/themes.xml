<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#EF6C00</item>
        <item name="colorPrimaryVariant">#FF8F00</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_grey_variant</item>
        <item name="colorSecondaryVariant">@color/dark_grey</item>
        <item name="colorOnSecondary">@color/bottom_bar_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Main.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Main.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Main.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>

